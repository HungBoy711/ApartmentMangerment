<%- include('../layouts/index.ejs') %>
    <div class="container">
        <div class="page-inner">
            <% if (messages.errorIdCitizen) { %>
                <div class="d-flex justify-content-end">
                    <div class="alert alert-danger alert-dismissible fade show" style="width: 300px; position: fixed;"
                        role="alert">
                        <%= messages.errorIdCitizen %>
                            <button type="button" class="btn-close btn-sm" data-bs-dismiss="alert"
                                aria-label="Close"></button>
                    </div>
                </div>
                <% } %>

                    <a class="btn btn-light rounded-3  " href="/apartment/<%= apartID %>">
                        <i class=" fa-solid fa-arrow-left-long"></i>
                    </a>
                    <div class="page-header">
                        <h3 class="fw-bold mb-0">Thêm cư dân căn hộ <%= apartID %>
                        </h3>
                    </div>

                    <div class="row">
                        <form method="POST" action="createCitizen">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header">
                                        <div class="card-title">Thông tin cư dân</div>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <input type="hidden" name="ApartID" value="<%= apartID %>">
                                            <div class="col-md-6 col-lg-4">
                                                <div class="form-group">
                                                    <label for="CitizenID">Mã cư dân</label>
                                                    <input required type="text" name="CitizenID" class="form-control">
                                                </div>
                                                <div class="form-group">
                                                    <label for="Relationship">Quan hệ</label>
                                                    <select class="form-select" name="Relationship">
                                                        <option>Cha</option>
                                                        <option>Mẹ</option>
                                                        <option>Con</option>
                                                        <option>Ông</option>
                                                        <option>Bà</option>
                                                        <option>Khác</option>
                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <label>Vai trò</label>
                                                    <select class="form-select" name="Role">
                                                        <option>Chủ căn hộ</option>
                                                        <option>Thành viên căn hộ</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="col-md-6 col-lg-4">
                                                <div class="form-group">
                                                    <label for="Name">Họ và tên</label>
                                                    <input required type="text" name="Name" class="form-control">
                                                </div>
                                                <div class="form-group">
                                                    <label for="BirthDay">Ngày sinh</label>
                                                    <input required type="date" name="BirthDay" class="form-control">
                                                </div>
                                                <div class="form-group">
                                                    <label for="Phone">Số điện thoại</label>
                                                    <input required type="Number" name="Phone" class="form-control">
                                                </div>
                                            </div>

                                            <div class="col-md-6 col-lg-4">
                                                <div class="form-group">
                                                    <label for="Hometown">Số căn cước công dân</label>
                                                    <input required type="number" name="IdentificationCard"
                                                        class="form-control">
                                                </div>
                                                <div class="form-group">
                                                    <label>Giới tính</label><br />
                                                    <label class="form-radio-label">
                                                        <input class="form-radio-input" type="radio" name="Gender"
                                                            value="Nam" required>
                                                        <span class="form-radio-sign">Nam</span>
                                                    </label>
                                                    <label class="form-radio-label ml-3">
                                                        <input class="form-radio-input" type="radio" name="Gender"
                                                            value="Nữ">
                                                        <span class="form-radio-sign">Nữ</span>
                                                    </label>
                                                </div>
                                                <div class="form-group">
                                                    <label for="Hometown">Quê quán</label>
                                                    <input required type="text" name="Hometown" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-action">
                                        <a href="/apartment/<%=apartID%>" class="btn btn-danger">Huỷ</a>
                                        <button type="submit" class="btn btn-primary">Xác nhận</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
        </div>
    </div>