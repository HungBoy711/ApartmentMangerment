<%- include('../layouts/index.ejs') %>
    <div class="container">
        <div class="page-inner">
            <div class="page-header">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createModal">
                    <i class="fa-regular fa-plus"></i>
                </button>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="d-flex align-items-center">

                                <h3 class="fw-bold mb-3">Danh sách căn hộ</h3>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="add-row" class=" table table-bordered table-hover ">
                                    <thead>
                                        <tr>
                                            <th scope="col" style="display: none;">#</th>
                                            <th scope="col">Số căn hộ</th>
                                            <th scope="col">Tầng</th>
                                            <th scope="col">số người ở</th>
                                            <th scope="col">Trạng thái</th>
                                            <th scope="col">Diện tích</th>
                                            <th scope="col" class="col-3">Chức năng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% listApartments.forEach(function(apartment) { %>
                                            <tr>
                                                <td style="display: none;">
                                                    <%= apartment.id %>
                                                </td>
                                                <td>
                                                    <%= apartment.ApartID %>
                                                </td>
                                                <td>
                                                    <%= apartment.CitizenCount %>
                                                </td>
                                                <td>
                                                    <%= apartment.Floor %>
                                                </td>
                                                <td>
                                                    <%= apartment.Status %>
                                                </td>
                                                <td>
                                                    <%= apartment.Size %> m2
                                                </td>
                                                <td style="width: 200px;">
                                                    <a class="btn btn-primary"
                                                        style="color: white;text-decoration: none; margin-right: 20px; "
                                                        href="/apartmentDetail/<%= apartment.ApartID %>">Chi
                                                        tiết</a>
                                                    <button class="edit-btn" data-toggle="modal"
                                                        data-target="#editApartmentModal" data-id="<%= apartment.id %>"
                                                        data-apartid="<%= apartment.ApartID %>"
                                                        data-citizencount="<%= apartment.CitizenCount %>"
                                                        data-floor="<%= apartment.Floor %>"
                                                        data-status="<%= apartment.Status %>"
                                                        data-size="<%= apartment.Size %>">
                                                        <i class="fa-solid fa-pencil"></i>
                                                    </button>
                                                    <button class="delete-btn" data-toggle="modal"
                                                        data-target="#deleteApartmentModal"
                                                        data-id="<%= apartment.id %>"
                                                        data-apartid="<%= apartment.ApartID %>">
                                                        <i class="fa-solid fa-trash"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>
                                <div class="d-flex justify-content-center mt-4">
                                    <!-- phan trang -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
    </div>