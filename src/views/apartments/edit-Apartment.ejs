<%- include('../layouts/index.ejs') %>
    <div class="container">
        <div class="page-inner">
            <button class="btn btn-light rounded-2 border-1 border-dark " onclick="history.back()">
                <i class="fa-solid fa-arrow-left-long"></i>
            </button>
            <div class="page-header">
                <h3 class="fw-bold mb-0"></h3>
            </div>
            <div class="row">
                <form method="POST" action="/apartment/editApartment">
                    <div class="col-md-12 ">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">Sửa thông tin căn hộ</div>
                                <input type="hidden" name="totalPages" value="<%= totalPages %>">
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 col-lg-4">
                                        <div class="form-group">
                                            <label>Số căn hộ</label>
                                            <input required type="number" name="ApartID" class="form-control">
                                        </div>
                                        <div class="form-group ">
                                            <label>Tầng</label>
                                            <input required type="number" name="Floor" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-lg-4">
                                        <div class="form-group ">
                                            <label>Số lượng phòng</label>
                                            <input required type="number" name="TotalRoom" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label>Trạng thái</label>
                                            <select class="form-select" name="Status">
                                                <option>Đang ở</option>
                                                <option>Không sử dụng</option>
                                                <option>Sửa chữa</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-lg-4">
                                        <div class="form-group ">
                                            <label for="Size">Diện tích/m2</label>
                                            <input required type="number" name="Size" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-action">
                                <button onclick="history.back()" class="btn btn-danger">Huỷ</button>
                                <button type="submit" class="btn btn-primary">Xác nhận</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>